{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "types": [
      "react",
      "react-native"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/*"
      ]
    },
    "skipLibCheck": true
  },
  "include": [
    "app",
    "types",
    "expo-env.d.ts",
    ".expo/types/**/*.ts"
  ]
}
